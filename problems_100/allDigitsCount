import java.io.*;
import java.util.*;

// Read only region start
class UserMainCode
{
    public int allDigitsCount(int input1){
        // Read only region end
        input1 = Math.abs(input1); // handle negative numbers
        int count = 0;
        
        if (input1 == 0) return 1;  // Special case for input = 0

        while (input1 != 0) {
            input1 = input1 / 10;
            count++;
        }

        return count;
    }
}
